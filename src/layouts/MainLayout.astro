---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
	description: string;
}

const { title, description } = Astro.props;
const siteTitle = "TechBrew Daily";
---
<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}/favicon.svg`} />
		<title>{title} | {siteTitle}</title>
		<meta name="description" content={description} />
		<!-- Google Fonts for a professional look -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&family=Roboto+Mono:wght@400;700&display=swap" rel="stylesheet">
	</head>
	<body class="bg-slate-900 text-slate-300 font-sans">
		<Header />
		<main class="max-w-7xl mx-auto px-4 py-10">
			<slot />
		</main>
		<Footer />
	</body>
</html>
<style is:global>
	:root {
		color-scheme: dark;
	}
	body {
		font-family: 'Inter', sans-serif;
	}
</style>