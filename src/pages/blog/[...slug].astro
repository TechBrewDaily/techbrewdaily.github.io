---
import MainLayout from '../../layouts/MainLayout.astro';
import Sidebar from '../../components/Sidebar.astro';
import { getCollection, type CollectionEntry, render } from 'astro:content';

export async function getStaticPaths() {
    const posts = await getCollection('blog');
    return posts.map(post => ({
        params: { slug: post.id },
        props: post,
    }));
}

type Props = CollectionEntry<'blog'>;
const post = Astro.props;
const { Content } = await render(post);
---
<MainLayout title={post.data.title} description={post.data.description}>
    <div class="flex flex-col lg:flex-row gap-12">
        <!-- Main Content Column -->
        <div class="w-full lg:w-2/3">
            <article>
                {(post.data.heroImage || post.data.image) && (
                    <img 
                        src={post.data.heroImage?.src || post.data.image?.url} 
                        alt={post.data.image?.alt || post.data.title} 
                        class="rounded-lg mb-8 w-full h-auto max-h-96 object-cover" 
                    />
                )}
                <h1 class="text-4xl font-bold text-slate-100">{post.data.title}</h1>
                <p class="text-md text-slate-400 mt-2 mb-8">
                    {post.data.author && `By ${post.data.author} on `}{post.data.pubDate.toLocaleDateString('en-IN', { year: 'numeric', month: 'long', day: 'numeric' })}
                </p>

                <!-- Styles the markdown content from your .md file -->
                <div class="prose prose-invert prose-lg max-w-none 
                            prose-h2:text-cyan-400 prose-a:text-cyan-400 
                            prose-strong:text-slate-100 prose-blockquote:border-l-cyan-500">
                    <Content />
                </div>
            </article>
        </div>

        <!-- Sidebar Column -->
        <aside class="w-full lg:w-1/3 lg:sticky top-24 self-start">
            <Sidebar currentPostSlug={post.id} />
        </aside>
    </div>
</MainLayout>